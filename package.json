{
  "name": "@commerce-apps/raml-toolkit",
  "version": "0.2.7",
  "description": "",
  "bin": {
    "ramlint": "./bin/run",
    "raml-toolkit": "./bin/run"
  },
  "main": "./main.ts",
  "files": [
    "validator",
    "bin",
    "profiles"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.1",
    "amf-client-js": "^3.5.4",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "path": "^0.12.7",
    "promise": "^8.0.3",
    "tmp": "^0.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webapi-parser": "^0.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    }
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "pretest": "npm run lint",
    "lint": "eslint \"**/*.ts\" --quiet --fix",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\" --require ts-node/register --watch-extensions ts --recursive --timeout 5000",
    "version": "oclif-dev readme && git add README.md"
  },
  "devDependencies": {
    "@oclif/test": "^1.2.5",
    "@types/fs-extra": "^8.0.1",
    "@types/js-yaml": "^3.12.2",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.15",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.15.2"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": -10,
    "exclude": [
      "coverage/**",
      "node_modules/**",
      "**/*.d.ts",
      "**/*.test.ts",
      "app.js"
    ],
    "sourceMap": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  }
}
