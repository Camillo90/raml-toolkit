{
    "compilerOptions": {   
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        "target": "ES6",
        "esModuleInterop": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames":true,
        "importHelpers": true,
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "rootDir": "src",
        "composite": true
    },
    "types": [
        "mocha"
      ],
    // NOTE: Everything except what you want compiled into JS should be in the exclusions.
    "exclude": [
        "node_modules",
        "release",
        "test",
        "gulpfile.ts"
    ],
    "include": [
        "src/**/*"
    ]
}
